#!/bin/sh
# vi: sw=4 sts=4 ts=8 et
#
# Helper for message output
#
[ "${__sourced_msg-}" = msg ] && return ||
  __sourced_msg=msg

msg() {
    # shellcheck disable=2015
    [ $# -gt 0 ] && printf '%s\n' "$@" || :
}

err() {
    # shellcheck disable=2039
    local s=$?
    [ $s -gt 0 ] || s=1
    msg "$@" >&2
    return $s
}

die() {
    err "$@" || exit
}

__msg_name="$(basename "$0" .sh)"
case "$__msg_name" in
    msg|err)    "$__msg_name" "$@";;
    # die only works as a function
esac
