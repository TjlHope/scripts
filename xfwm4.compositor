#!/bin/sh
# Small script to restart the compositor, want to find a way to toggle it
# instead of just having on|off

case "$1" in
    "on")
	/usr/bin/xfwm4 --replace --compositor=on
	;;
    "off")
	/usr/bin/xfwm4 --replace --compositor=off
	;;
    *)
	echo "Usage: $0 on|off" >&2
	exit 1
esac
